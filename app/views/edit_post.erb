
<form action="/edit_post/<%= @post.id %>" method="POST">
  <label for="title">Title</label><br>
  <input type="text" name="title" value="<%= @post.title %>"><br>
  <label for="body">Content</label><br>
  <textarea name="body" cols="30" rows="10"><%= @post.body %></textarea>
  <p>add tags to your post</p>
  <% @tags.each do |tag| %>
    <% if @post.tags.include?(tag) %>
    <input type="checkbox" name="<%= tag.name %>" value="true" checked><%= tag.name %><br>
    <% else %>
    <input type="checkbox" name="<%= tag.name %>" value="true"><%= tag.name %><br>
    <% end %>
  <% end %>
  <br>
  <div class='edit-delete'><button><input type="submit" value="Edit this post!"></button></div>
</form>

<a href='/user/<%= @post.user_id %>' class='edit-delete'><button>Cancel</button></a>
